@using GMS.ViewModels
@model List<OrderDetailsViewModel>

<h4 style=" text-align: center;">Order Product Details</h4>
<table class="table table-striped">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Product Name
			</th>
			<th>
				Price
			</th>
			<th>
				Quantity
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (OrderDetailsViewModel order in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => order.ProductCategory)
				</td>
				<td>
					@Html.DisplayFor(modelItem => order.ProductName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => order.ProductPrice)
				</td>
				<td>
					@Html.DisplayFor(modelItem => order.ProductQuantity)
				</td>
			</tr>
		}
	</tbody>
</table>