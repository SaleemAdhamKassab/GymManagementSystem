@using GMS.Mapper
@using GMS_BusinessLogic;
@using GMS_BusinessLogic.Categories
@model Product;

@{
	Category category = new();
}

<h4 style=" text-align: center;">Create New Product</h4>
<div class="row">
	<div class="col-md-12">
		<form asp-action="add">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group mb-2">
				<select class="form-select" asp-for="CategoryId" asp-items="@(new SelectList(MapProfile.dtToCategories(category.get(string.Empty)),"Id","Name"))" required>
					<option>Select Category...</option>
				</select>
			</div>
			<div class="form-group mb-2">
				<input asp-for="Name" class="form-control" placeholder="Product Name" required />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label>Quantity</label>
				<input type="number" asp-for="Quantity" class="form-control" placeholder="Quantity" required min="1" />
				<span asp-validation-for="Quantity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary mb-3" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}