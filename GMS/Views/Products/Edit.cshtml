@using GMS_BusinessLogic
@model Product

@{
	ViewData["Title"] = "Edit";
}

<h4 style=" text-align: center;">Edit @Model.Name</h4>
<div class="row">
	<div class="col-md-12">
		<form asp-action="Edit" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="CategoryId" />

			<div class="form-group mb-2">
				<input asp-for="Name" class="form-control" placeholder="Product Name" required />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="form-group mb-2">
				<label>Quantity</label>
				<input type="number" asp-for="Quantity" class="form-control" placeholder="Quantity" required min="1" />
				<span asp-validation-for="Quantity" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary mb-3" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}