@using GMS_BusinessLogic.Categories
@model Category;

<h4 style=" text-align: center;">Create New Category</h4>
<div class="row">
    <div class="col-md-12">
        <form asp-action="add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <input asp-for="Name" class="form-control" placeholder="Category Name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mb-3" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}